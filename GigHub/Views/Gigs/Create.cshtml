@model GigHub.ViewModels.GigFormViewModel
<div class="col-3">

<h2>Add a Gig</h2>

<form asp-action="Create" asp-controller="Gigs">
    <div class="mb-3 form-group">
        <label asp-for="Venue" class="form-label"></label>
        <input asp-for="Venue" class="form-control" >
    </div>


    <div class="mb-3 form-group">
        <label asp-for="Date" class="form-label"></label>
        <input asp-for="Date" class="form-control" />
    </div>
    <div class="mb-3 form-group">
        <label asp-for="Time" class="form-label"></label>
        <input asp-for="Time" class="form-control" />
    </div>
        <div class="mb-3 form-group">
            <label asp-for="Genre" class="form-label"></label>
            <select asp-for="Genre" asp-items="@ViewBag.Genres" class="form-select"></select>
        </div>
   
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>